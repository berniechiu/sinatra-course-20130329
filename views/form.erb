<form action="<%=@action%>" method="post">
  <%if @method%>
    <input type="hidden" name="_method" value="<%=@method%>"/>
  <%end%>
  <% if @method == :put %>
    <ul>
      <li>
        <label>Name</label>
        <input size="30" name="contact[name]" type="text" value="<%=@contact["name"]%>"/>
      </li>
      <li>
        <label>Phone</label>
        <input type="text" name="contact[phone]"  value="<%=@contact["phone"]%>"/>
      </li>
      <li>
        <label>Address</label>
        <input size="60" type="text" name="contact[address]" value="<%=@contact["address"]%>"/>
      </li>
      <li>
        <label>Note</label>
        <textarea cols="40" rows="10" name="contact[note]"><%=@contact["note"]%></textarea>
      </li>
    </ul>
  <% elsif @method == :post %>
    <ul>
      <li>
        <label>Name</label>
        <input size="30" name="contact[name]" type="text"/>
      </li>
      <li>
        <label>Phone</label>
        <input type="text" name="contact[phone]"/>
      </li>
      <li>
        <label>Address</label>
        <input size="60" type="text" name="contact[address]"/>
      </li>
      <li>
        <label>Note</label>
        <textarea cols="40" rows="10" name="contact[note]"></textarea>
      </li>
    </ul>
  <% end %>
  <input type="submit" value="Submit"/>
</form>
